<form action="/recipes/<%= @recipes.id %>" method="post">
    <input type="hidden" name="_method" value="patch" id="hidden">

    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= @recipes.name %>">

    <label for="ingredients">Ingredients</label>
    <input type="text" name="ingredients" id="ingredients" value="<%= @recipes.ingredients %>">

    <label for="cook_time">Cook Time</label>
    <input type="text" name="cook_time" id="cook_time" value="<%= @recipes.cook_time %>">

    <input type="submit" value="submit" id="submit">
</form>